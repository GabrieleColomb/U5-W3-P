@model IEnumerable<U5_W3_P.Models.DettaglioOrdini>

@{
    ViewBag.Title = "RiepilogoOrdine";
}

<h2 class="text-center" style="color:white">Riepilogo del tuo ordine</h2>

<div class="container">
    <table class="table table-bordered" style="margin-bottom: 20.5rem; background-color: #f2f2f2;">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prodotto.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantità)
                </th>
                <th>
                    Prezzo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prodotto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantità)
                    </td>
                    <td>
                        @(item.Prodotto.Prezzo * Convert.ToDecimal(@item.Quantità)) &euro;
                    </td>
                    <td>
                        @Html.ActionLink("Elimina", "EliminaOrdine", new { id = item.IdDettaglio }, new { @class = "btn btn-danger", style = "text-decoration:none;" })
                        <i class="bi bi-trash"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-5">
        <h4 class="mb-4 text-white">
            <i class="fas fa-coins fa-2x mr-2 text-white"></i>
            Prezzo totale: <span class="badge badge-success">@ViewBag.PrezzoTotale.ToString("C")</span>
        </h4>
    </div>
    <div class="text-center">
        @Html.ActionLink("Invia ordine", "InviaOrdine", "Users", null, new { @class = "btn btn-primary" })
    </div>
</div>